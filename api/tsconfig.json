{
  "extends": "../tsconfig.node.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "outDir": "../dist/api",
    "declaration": false,
    "sourceMap": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
